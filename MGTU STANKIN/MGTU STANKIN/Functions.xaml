        <Button x:Name="livInfo" Click="livInfo_Click" Margin="5,40,10,61" Grid.Row="4" Grid.Column="1" Grid.RowSpan="3">
            <TextBlock TextWrapping="Wrap"><Run Text="Информация о проживающих"/></TextBlock>
        </Button>
        <Button Content="Информация о комнатах" x:Name="roomInfo" Click="roomInfo_Click" Grid.Column="1" Margin="8,38,10,61" Grid.Row="6" Grid.RowSpan="3"/>
        <Label Content="" x:Name="testLabel1" Grid.Column="2" HorizontalAlignment="Left" Margin="40,41,0,0" Grid.Row="1" VerticalAlignment="Top" Width="417" Grid.ColumnSpan="2" Height="26" MouseDoubleClick="testLabel1_MouseDoubleClick" Grid.RowSpan="2"/>
        <Label Content="" x:Name="testLabel2" Grid.Column="2" HorizontalAlignment="Left" Margin="40,15,0,0" Grid.Row="2" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="417" MouseDoubleClick="testLabel2_MouseDoubleClick" Height="26"/>
        <Button Content="Настройки" x:Name="settingsButton" Click="settingsButton_Click" Grid.Column="2" HorizontalAlignment="Left" Margin="10,38,0,0" Grid.Row="6" VerticalAlignment="Top" Width="145" Height="63" Grid.RowSpan="3"/>
        <Label Content="" x:Name="testLabel3" HorizontalAlignment="Left" MouseDoubleClick="testLabel3_MouseDoubleClick" Margin="40,46,0,0" VerticalAlignment="Top" Grid.Column="2" Grid.Row="2" Grid.RowSpan="2" Grid.ColumnSpan="2" Width="417"/>
        <Button Content="Отчеты" x:Name="reports" Click="reports_Click" Grid.Column="2" HorizontalAlignment="Left" Margin="170,38,0,0" Grid.Row="6" VerticalAlignment="Top" Width="145" Grid.ColumnSpan="2" Height="63" Grid.RowSpan="3"/>
    </Grid>
