      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:cm="clr-namespace:System.ComponentModel;assembly=System"
      mc:Ignorable="d" 
      d:DesignHeight="300"
	Title="Functions" Width="710" Height="450" Loaded="Page_Loaded">
    <!--  <Page.Resources>
        <cm:BackgroundWorker x:Key="backgroundWorker" DoWork="backgroundWorker_DoWork"/>
    </Page.Resources>
    -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="44*"/>
            <ColumnDefinition Width="165*"/>
            <ColumnDefinition Width="204*"/>
            <ColumnDefinition Width="267*"/>
            <ColumnDefinition Width="30*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="68*"/>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="68*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>
        <GroupBox Grid.Column="2" Header="Сообщения" HorizontalAlignment="Left" Margin="20,13,0,0" Grid.Row="1" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="198" Grid.RowSpan="4" Width="447">
            <Label Content="" x:Name="testLabel4" HorizontalAlignment="Left" MouseDoubleClick="testLabel4_MouseDoubleClick" Margin="14,107,0,0" VerticalAlignment="Top" Width="409"/>
